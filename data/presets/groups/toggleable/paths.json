{
    "name": "Paths",
    "description": "Sidewalks, Foot Paths, Cycle Paths, etc.",
    "toggleable": true,
    "matches": {
        "geometry": ["line", "area"],
        "anyTags": {
            "barrier": "*",
            "highway": {
                "path": true,
                "footway": true,
                "cycleway": true,
                "bridleway": true,
                "pedestrian": true,
                "corridor": true,
                "steps": true
            }
        }
    }
}
